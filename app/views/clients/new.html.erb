<% breadcrumb :clients %>

<div class="mb-3 d-md-flex fw-bold">
  <div class="mt-2 mt-md-0">
    <%= link_to clients_path, class: "text-decoration-none text-dark" do %>
      <i class="fa fa-arrow-left fa-fw me-1 text-dark text-opacity-50"></i>
      <%= t(".back", default: t("helpers.back", default: "Back")) %>
    <% end %>
  </div>
</div>

<div class="row gx-4">
  <div class="col-xl-12 mb-xl-0 mb-4">
    <div class="card border-0">
      <div class="card-header bg-none p-3 h6 m-0 d-flex align-items-center">
        <i class="fa fa-building-circle-check fa-lg me-2 text-gray text-opacity-50"></i>
        <%= t(".title", default: t("helpers.titles.new", model: Client.model_name.human)) %>
      </div>
      <div class="card-body p-3">
        <%= render "form" %>
      </div>
    </div>
  </div>
</div>
