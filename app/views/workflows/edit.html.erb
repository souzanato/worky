<% breadcrumb :workflow, @workflow %>

<div class="mb-3 d-md-flex fw-bold">
  <div class="mt-2 mt-md-0">
    <%= link_to workflows_path, class: "text-decoration-none text-dark" do %>
      <i class="fa fa-arrow-left fa-fw me-1 text-dark text-opacity-50"></i>
      <%= t(".back", default: "Back") %>
    <% end %>
  </div>
  <div class="ms-md-4 mt-2 mt-md-0">
    <%= link_to @workflow, class: "text-decoration-none text-dark" do %>
      <i class="fa fa-eye fa-fw me-1 text-dark text-opacity-50"></i>
      <%= t(".show", default: "Show") %>
    <% end %>
  </div>
</div>

<div class="row gx-4">
  <div class="col-xl-8 mb-xl-0 mb-4">
    <div class="card border-0">
      <div class="card-header bg-none p-3 h6 m-0 d-flex align-items-center">
        <i class="fa fa-pen fa-lg me-2 text-gray text-opacity-50"></i>
        <%= t(".title", default: "Edit Workflow") %>
      </div>
      <div class="card-body p-3" data-controller="workflow-builder">
        <%= render "form", workflow: @workflow %>
      </div>
    </div>
  </div>

  <div class="col-xl-4">
    <div class="card border-0">
      <div class="card-header bg-none p-3 h6 m-0 d-flex align-items-center">
        <i class="fa fa-circle-info fa-lg me-2 text-gray text-opacity-50"></i>
        <%= t(".status", default: "Status") %>
      </div>
      <div class="card-body fw-bold">
        <div class="small text-dark text-opacity-50"><%= t(".workflow_id", default: "Workflow ID") %></div>
        <div><%= @workflow.id %></div>
      </div>
    </div>
  </div>
</div>
