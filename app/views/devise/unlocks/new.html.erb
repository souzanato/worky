<!-- BEGIN login -->
<div class="login login-with-news-feed">
  <div class="news-feed">
    <div class="news-image" style="background-image: url(<%= asset_path('baia.png') %>)"></div>
    <div class="news-caption">
      <h4 class="caption-title"><b><%= t('general.app.short') %></b> <%= t('general.app.name') %></h4>
      <p><%= t('texts.registration.caption_html') %></p>
    </div>
  </div>

  <div class="login-container">
    <div class="login-header mb-30px">
      <div class="brand">
        <div class="d-flex align-items-center">
          <%= image_tag "baia-icon.png", style: 'height: 1.1em' %>
          <b class="me-1"><%= t('general.app.short') %></b> <%= t('general.app.name') %>
        </div>
        <small><%= t('texts.unlocks.resend_title', default: 'Resend unlock instructions') %></small>
      </div>
      <div class="icon"><i class="fa fa-unlock"></i></div>
    </div>

    <div class="login-content">
      <%= form_for(resource,
            as: resource_name,
            url: unlock_path(resource_name),
            html: { method: :post, class: "fs-13px", novalidate: true },
            validate: true) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-floating mt-15px">
          <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                class: "form-control h-45px fs-13px",
                placeholder: t('placeholders.user.email'),
                id: "unlockEmail" %>
          <%= f.label :email, t('activerecord.attributes.user.email'),
                for: "unlockEmail",
                class: "d-flex align-items-center fs-13px text-gray-600" %>
        </div>

        <div class="mb-15px mt-15px">
          <%= f.submit t('buttons.unlocks.resend', default: "Resend unlock instructions"),
                class: "btn btn-theme d-block h-45px w-100 btn-lg fs-14px",
                disabled_with: "Please wait..." %>
        </div>
      <% end %>

      <div class="mb-40px pb-40px text-dark devise-links">
        <%= render "devise/shared/links" %>
      </div>

      <hr class="bg-gray-600 opacity-2" />
      <div class="text-gray-600 text-center mb-0">
        &copy; <%= t('general.app.name') %> <%= Date.current.year %>
      </div>
    </div>
  </div>
</div>
<!-- END login -->
