<%- if controller_name != 'sessions' %>
  <%= link_to t('links.general.back'), new_session_path(resource_name),
        class: "devise-link" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('buttons.registration.sign_up'), new_registration_path(resource_name),
        class: "devise-link" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('devise.passwords.new'), new_password_path(resource_name),
        class: "devise-link" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('devise.unlocks.new'), new_unlock_path(resource_name),
        class: "devise-link" %><br />
<% end %>
