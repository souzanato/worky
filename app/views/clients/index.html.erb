<% breadcrumb :clients %>

<h1 class="page-header">
  <%= t(".title", default: "Clients") %>
  <small><%= t(".subtitle", default: "Manage application clients") %></small>
</h1>

<div class="panel panel-inverse">
  <div class="panel-heading">
    <h4 class="panel-title"><%= t(".table_title", default: "Clients") %></h4>
    <div class="panel-heading-btn">
      <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
      <a href="javascript:;" class="btn btn-xs btn-icon btn-success" data-toggle="panel-reload"><i class="fa fa-redo"></i></a>
      <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a>
      <a href="javascript:;" class="btn btn-xs btn-icon btn-danger" data-toggle="panel-remove"><i class="fa fa-times"></i></a>
    </div>
  </div>

  <div class="panel-body">
    <div class="d-flex mb-3">
      <div class="ms-auto">
        <% if can?(:create, Client) %>
          <%= link_to t(".new", default: "New Client"),
                      new_client_path,
                      class: "btn btn-theme btn-sm" %>
        <% end %>
      </div>
    </div>

    <table id="clients-table" class="table table-hover table-bordered align-middle text-nowrap" data-controller="data-table">
      <thead>
        <tr>
          <th class="text-nowrap" width="1%">#</th>
          <th class="text-nowrap"><%= t("activerecord.attributes.client.name") %></th>
          <th class="text-nowrap"><%= t("activerecord.attributes.client.description") %></th>
        </tr>
      </thead>
      <tbody id="clients">
        <%= render @clients %>
      </tbody>
    </table>
  </div>
</div>
