<%= form_with model: workflow do |f| %>
  <div class="row g-2">
    <div class="col-md-6">
      <div class="form-floating">
        <%= f.text_field :title, class: "form-control", placeholder: "Title", required: true %>
        <%= f.label :title %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-floating">
        <%= f.text_area :description, rows: 1, class: "form-control", placeholder: "Description" %>
        <%= f.label :description %>
      </div>
    </div>
  </div>

  <hr class="my-3" />

  <div class="mt-3">
    <%= f.submit class: "btn btn-theme" %>
  </div>
<% end %>
